{
  "name": "@cloudexpress/api",
  "version": "1.0.0",
  "description": "Cygni API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "echo 'Skipping build for packages/api - using services/api instead'",
    "start": "node dist/index.js",
    "test": "echo 'Skipping tests for packages/api - using services/api instead'",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "echo 'Skipping typecheck for packages/api - using services/api instead'",
    "env:validate": "ts-node src/config/env.validation.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "validate": "./scripts/validate-backend.sh",
    "postman:run": "newman run cloudexpress.postman_collection.json --env-var baseUrl=http://localhost:3000",
    "seed:dev": "ts-node prisma/seed.ts",
    "doctor": "./scripts/doctor.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@sentry/node": "^9.40.0",
    "@sentry/profiling-node": "^9.40.0",
    "aws-sdk": "^2.1400.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cron": "^2.4.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "on-finished": "^2.4.1",
    "prom-client": "^15.0.0",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.6.1",
    "stripe": "^13.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.0.0",
    "@types/on-finished": "^2.3.1",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prisma": "^5.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "types": "./dist/index.d.ts"
}
