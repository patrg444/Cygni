# CloudExpress API Configuration

# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3001

# Database
DATABASE_URL=postgresql://user:CHANGEME_DB_PASSWORD@localhost:5432/cloudexpress

# JWT
JWT_SECRET=CHANGEME_MIN_32_CHARS_USE_OPENSSL_RAND_HEX_32
JWT_EXPIRY=24h

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_COMPUTE=price_...
STRIPE_PRICE_STORAGE=price_...
STRIPE_PRICE_BANDWIDTH=price_...
STRIPE_PRICE_REQUESTS=price_...

# Email (SendGrid example)
SENDGRID_API_KEY=SG...
FROM_EMAIL=noreply@cloudexpress.app
SUPPORT_EMAIL=support@cloudexpress.app

# Admin
ADMIN_API_KEY=CHANGEME_MIN_32_CHARS_USE_OPENSSL_RAND_HEX_32

# AWS (for CloudFront/S3)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Feature Flags
ENABLE_MULTI_REGION=false
ENABLE_CANARY_DEPLOYMENTS=true
FREE_TIER_LIMIT=10.00

# SAML Configuration
SAML_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----
SAML_CERTIFICATE=-----BEGIN CERTIFICATE-----\nYOUR_CERTIFICATE_HERE\n-----END CERTIFICATE-----
API_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001