# CloudExpress API Configuration

# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cloudexpress

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=24h

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_COMPUTE=price_...
STRIPE_PRICE_STORAGE=price_...
STRIPE_PRICE_BANDWIDTH=price_...
STRIPE_PRICE_REQUESTS=price_...

# Email (SendGrid example)
SENDGRID_API_KEY=SG...
FROM_EMAIL=noreply@cloudexpress.app
SUPPORT_EMAIL=support@cloudexpress.app

# Admin
ADMIN_API_KEY=your-admin-key-here

# AWS (for CloudFront/S3)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Feature Flags
ENABLE_MULTI_REGION=false
ENABLE_CANARY_DEPLOYMENTS=true
FREE_TIER_LIMIT=10.00